@{
    ViewData["Title"] = "Home Page";
}

<div id="homeImageSlide" class="carousel slide carousel-inner" align="center" data-ride="carousel" data-interval="1500">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-75 " src="./img/homeimage1.jpg" alt="First slide" />
            <div class="carousel-caption">
                <h3 style="color:red">Favorite book</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage2.jpg" alt="Second slide">
            <div class="carousel-caption">
                <h3 style="color:blueviolet">Books in family</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage4.jpg" alt="Forth slide">
            <div class="carousel-caption">
                <h3 style="color:black">Studying</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage5.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage6.jpg" alt="Sixth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-75" src="./img/homeimage7.jpg" alt="Seventh slide">
            <div class="carousel-caption">
                <h3 style="color:yellow">Library</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#homeImageSlide" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#homeImageSlide" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



